---
// src/components/news/NewsSidebar.astro
const { activeCategory } = Astro.props;
const categories = ["すべて", "プレスリリース", "お知らせ", "メディア掲載"];
---

<aside class="news-sidebar">
  <h3 class="sidebar-title">カテゴリー</h3>
  <nav>
    <ul>
      {categories.map((cat) => (
        <li>
          <a 
            href={cat === "すべて" ? "/news/すべて/1" : `/news/${cat}/1`}
            class={activeCategory === cat ? "active" : ""}
          >
            {cat}
            <span class="chevron">›</span>
          </a>
        </li>
      ))}
    </ul>
  </nav>
</aside>

<style>
  .news-sidebar { 
    width: 240px; 
    flex-shrink: 0;
    position: sticky;
    top 100px;
  }
  .sidebar-title { 
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 20px;
    border-bottom: 2px solid #333; 
    padding-bottom: 10px;
  }
  .news-sidebar ul { 
    list-style: none; padding: 0; 
  }
  .news-sidebar li a {
    padding: 18px 0;
    display: flex;
    justify-content: space-between;
    padding: 15px 0;
    text-decoration: none;
    color: #666;
    border-bottom: 1px solid #f0f0f0;
    transition: color 0.3s;
    font-size: 12px;
  }
  .news-sidebar li a.active {
    color: #0052cc;
    border-bottom: 1px solid #0052cc;
  }
  .news-sidebar li a:hover, .news-sidebar li a.active { color: #0052cc; font-weight: bold; }
  .chevron { opacity: 0.5; }
</style>