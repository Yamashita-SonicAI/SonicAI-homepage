// src/components/news/NewsList.astro
import NewsSidebar from "./NewsSidebar.astro";
const { news, page, currentCategory = "すべて" } = Astro.props;

// 日付で降順（最新順）にソートする確実な方法
const sortedNews = [...news].sort((a, b) => {
  // 文字列「2025.11.1」を「2025-11-1」に変換して日付として認識させる
  const dateA = new Date(a.date.replace(/\./g, '-')).getTime();
  const dateB = new Date(b.date.replace(/\./g, '-')).getTime();
  
  return dateB - dateA; // 最新が上（降順）
});

console.log("page data:", page);
---

<section class="news-hero">
  <div class="container">
    <h1>NEWS</h1>
  </div>
</section>

<div class="news-layout">
  <NewsSidebar activeCategory={currentCategory} />

  <section class="news-main-content">
    <header class="news-list-header">
      <h2>{currentCategory}</h2>
      <p class="count">{news.length}件表示</p>
    </header>

    <div class="news-cards-container">
      {/* sortedNews を map するように変更 */}
      {sortedNews.map((item) => (
        <article class="news-horizontal-card">
          <div class="card-img">
            <img src={item.image} alt="" />
          </div>
          <div class="card-info">
            <div class="meta">
              <time>{item.date}</time>
              <span class="tag">{item.category}</span>
            </div>
            {/* 【修正ポイント2】linkが未定義エラーにならないよう item.link を使用 */}
            <a href={`/${item.link}`}>
              <h3>{item.title}</h3>
            </a>
          </div>
          <div class="card-arrow">
            <span class="arrow-icon">→</span>
          </div>
        </article>
      ))}
    </div>
    {page && (
  <nav class="pagination">
    {page.url.prev && (
      <a href={page.url.prev} class="nav-button prev">前のページ</a>
    )}
    
    <div class="page-numbers">
      {Array.from({ length: page.lastPage }, (_, i) => i + 1).map((num) => {
        // カテゴリー名をURLに含めるための処理
        // 1ページ目を /news/category名 にするか /news/category名/1 にするかは
        // [page].astro の getStaticPaths の設定に合わせます。
        // 一般的には一貫性を持たせて以下のように書きます。
        const pagePath = `/news/${currentCategory}/${num}`;
        
        return (
          <a 
            href={pagePath} 
            class={`page-num ${page.currentPage === num ? "active" : ""}`}
          >
            {num}
          </a>
        );
      })}
    </div>

    {page.url.next && (
      <a href={page.url.next} class="nav-button next">次のページ</a>
    )}
  </nav>
)}
  </section>
</div>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px); /* 20px下から開始 */
    }
    to {
      opacity: 1;
      transform: translateY(0);    /* 元の位置へ */
    }
  }

  .news-hero {
    background-color: #000; /* 黒背景 */
    color: #fff;            /* 白文字 */
    padding: 100px 10px 40px 0;        /* 上下の余白（お好みに合わせて調整） */
    text-align: left;     /* 文字を中央寄せ */
    margin-bottom: 0px;
    width: 100%;
  }

  .news-hero h1 {
    font-size: 3.5rem;      /* 文字の大きさ */
    font-weight: bold;      /* 太字 */
    margin: 0;
    letter-spacing: 0.1em;  /* 字間を少し広げると綺麗に見えます */
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .news-hero .container {
  /* ここで中身の文字だけを1200pxの幅に制限する */
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 40px;
  }

  /* タイトルの基本スタイルと変化の準備 */
.card-info h3 {
  margin: 10px 0 0 0;
  font-size: 1.25rem;
  line-height: 1.5;
  transition: all 0.3s ease; /* 色と動きを滑らかに変える設定 */
}

/* カード全体、またはタイトルリンクにホバーした時の変化 */
.news-horizontal-card:hover .card-info h3 {
  color: #0047ff;            /* ページネーションと同じ青色に変化 */
  transform: translateX(8px); /* 右に8pxスッと動く */
}
  .container {
    max-width: 1200px;      /* 他のコンテンツと幅を合わせる */
    margin: 0 auto;
    padding: 0 40px;
  }

  .news-layout {
    display: flex;
    align-items: flex-start; /* ここを修正 */
    gap: 80px;
    max-width: 1200px;
    margin: 30px auto;
    padding: 0 40px;
  }

  .news-main-content {
  flex: 1;
  max-width: 800px; /* サイドバーを除いたメイン部分の幅を制限 */
  }
  
  .news-horizontal-card {
    display: flex;
    align-items: center;
    padding: 24px 0;
    border-bottom: 1px solid #eee;
    gap: 30px;
    background-color: #fff;
    border-radius: 12px;
    margin-bottom: 24px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08); 
    border: 1px solid #f0f0f0; /* 薄い枠線で輪郭をはっきりさせる */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .news-horizontal-card:hover {
    transform: translateY(-5px);         /* 少し上に浮かせる */
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12); /* 影を濃くする */
  }
  .card-info a {
    text-decoration: none;
    color: inherit;
  }
  .card-img { 
    width: 240px; 
    height: 140px; 
    overflow: hidden; 
    border-radius: 8px; /* 画像の角も丸くする */
    flex-shrink: 0;     /* 画像が潰れないように固定 */
  }
  .card-img img { width: 100%; height: 100%; object-fit: cover; }
  .card-info { flex: 1; }
  .tag { 
    border: 1px solid #ccc; 
    padding: 2px 10px; 
    border-radius: 20px; 
    font-size: 12px; 
    margin-left: 10px; 
  }

  /* ページネーションのデザイン（FLUX風） */
  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 30px;
    margin-top: 60px;
  }
  .page-numbers {
    display: flex;
    gap: 12px;
  }
  .page-num {
    width: 45px;
    height: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    text-decoration: none;
    color: #333;
    background: #fff;
    border: 1px solid #eee;
    font-weight: 500;
    transition: 0.2s;
  }
  .page-num.active {
    background-color: #0047ff; /* 青色アクセント */
    color: #fff;
    border-color: #0047ff;
  }
  .nav-button {
    text-decoration: none;
    color: #666;
    font-size: 14px;
  }
  @media (max-width: 1024px) {
    
    /* コンテナの余白をスマホ用に狭くする（40px -> 20px） */
    .container,
    .news-hero .container {
      padding: 0 20px !important; /* 強制的に上書き */
    }

    /* ニュースレイアウトの余白も合わせる */
    .news-layout {
      flex-direction: column;
      gap: 40px;
      padding: 0 20px; /* ここも20pxに統一 */
    }

    .news-main-content {
      width: 100%;
      max-width: 100%;
      order: 1;
    }

    /* ▼▼▼ 重要：記事カードをスマホで見やすく縦積みにする ▼▼▼ */
    .news-horizontal-card {
      flex-direction: column; /* 画像を上に、文字を下に */
      align-items: flex-start; /* 左揃え */
      gap: 16px; /* 隙間を詰める */
    }

    /* 画像を横幅いっぱいに広げる */
    .card-img {
      width: 100%;
      height: 200px; /* スマホで見やすい高さに */
    }

    /* テキスト部分の調整 */
    .card-info {
      width: 100%;
    }

    /* 矢印アイコンはスマホでは邪魔なら消すか、位置調整 */
    .card-arrow {
      display: none; /* シンプルにするため非表示推奨 */
    }

    /* サイドバーの調整 */
    :global(.news-sidebar) { 
      width: 100% !important;
      order: 2;
    }
    
    /* もしサイドバーがulタグの場合、左のデフォルト余白を消す */
    :global(.news-sidebar ul) {
      padding-left: 0;
    }
  }
</style>